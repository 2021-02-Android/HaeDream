<?xml version="1.0" encoding="utf-8"?>
<!-- 회원가입 화면 _ view 아이디
    아이디 : regi_id    비번 : regi_pw    학과 : regi_depart
    전화번호 : regi_first_num, regi_second_num    생년월일 : regi_birth
    회원가입 버튼 : join
    글자수 제한 다 해놨음
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/font_bold"
        android:text="JOIN"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginStart="46dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:fontFamily="@font/font_medium"
        android:textSize="20dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="이름을 입력해주세요."
        android:fontFamily="@font/font_light"
        android:textSize="15dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font_medium"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/regi_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="46dp"
        android:ems="10"
        android:fontFamily="@font/font_light"
        android:hint="4~15자 이내의 아이디를 입력해주세요."
        android:inputType="text"
        android:maxLength="15"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <!-- 비밀번호 -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_medium"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/regi_pw"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/font_light"
        android:hint="6~15자 이내의 비밀번호를 입력해주세요."
        android:inputType="textPassword"
        android:maxLength="15"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <!-- 학과 -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="308dp"
        android:fontFamily="@font/font_medium"
        android:text="학과"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regi_pw" />
    <!--
        Spinner item 편집은 values>department.xml 에서하기
        Spinner 자체에서 밑줄 만들고 싶은데 못하겠어..
    -->
    <Spinner
        android:id="@+id/regi_depart"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font_light"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:textColor="@color/black" />

    <!-- 전화번호 -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_medium"
        android:text="전화번호"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:fontFamily="@font/font_light"
            android:text="@string/phone"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_bold"
            android:text=" - "
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/regi_first_num"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/font_light"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="15dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_bold"
            android:text=" - "
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/regi_second_num"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_light"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="15dp" />
    </LinearLayout>

    <!-- 생년월일 -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_medium"
        android:text="생년월일"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/regi_birth"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/font_light"
        android:hint="생년월일을 입력해주세요. (ex. 20210923)"
        android:inputType="date"
        android:maxLength="8"
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/login_button"
        android:text="JOIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regi_birth"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

</LinearLayout>
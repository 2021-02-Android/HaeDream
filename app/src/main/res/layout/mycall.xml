<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#CCE5FF">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="left"
            android:layout_weight="1"
            app:srcCompat="@drawable/transparent_logo" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
        </LinearLayout>


        <ImageButton
            android:id="@+id/setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#00FFFDFD"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/mypage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sal" />

        <ImageButton
            android:id="@+id/mypage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/my" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/input"
        android:backgroundTint="#EDF1FF"
        android:fontFamily="@font/font_bold"
        android:gravity="center"
        android:text=" 요청한 심부름 "
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/callsimList"
            android:layout_width="match_parent"
            android:layout_height="280dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/input"
        android:backgroundTint="#EDF1FF"
        android:fontFamily="@font/font_bold"
        android:gravity="center"
        android:text=" 수락한 심부름 "
        android:textColor="@color/black"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/acceptsimList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/list_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="15dp"
            android:background="#00FF0000"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/input"
        android:backgroundTint="#CCE5FF"
        android:fontFamily="@font/font_bold"
        android:gravity="center"
        android:text=" 상대방 정보 "
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/my" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/font_bold"
                android:text="변민정"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_medium"
                    android:text=" 학과 : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_medium"
                    android:text="컴퓨터소프트웨어공학과"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        android:fontFamily="@font/font_bold"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반갑습니다. 컴퓨터소프트웨어공학과 19학번 학생입니다. 23대 학생회 부학회장을 맡고 있습니다. 같이 대화해요!"
        android:fontFamily="@font/font_medium"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.2"
            android:backgroundTint="#4E4D4D"
            android:fontFamily="@font/font_bold"
            android:gravity="center"
            android:text="뒤로가기"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/startChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.2"
            android:backgroundTint="#98C1E4"
            android:gravity="center"
            android:text="대화 하기"
            android:fontFamily="@font/font_bold"/>

    </LinearLayout>


</LinearLayout>